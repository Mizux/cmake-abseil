FROM alpine:latest
LABEL maintainer="corentinl@google.com"

RUN apk add --no-cache git build-base linux-headers cmake

RUN cd /tmp \
&& git clone https://github.com/abseil/abseil-cpp.git \
&& cd abseil-cpp \
&& cmake -H. -Bbuild \
&& cmake --build build --target install \
&& cd .. \
&& rm -rf abseil-cpp

COPY install /
