FROM fedora:latest

RUN dnf -y update \
&& dnf -y groupinstall "Development Tools" \
&& dnf -y install cmake gcc-c++ \
&& dnf clean all

RUN cd /tmp \
&& git clone https://github.com/abseil/abseil-cpp.git \
&& cd abseil-cpp \
&& cmake -H. -Bbuild \
&& cmake --build build --target install \
&& cd .. \
&& rm -rf abseil-cpp

COPY install /
